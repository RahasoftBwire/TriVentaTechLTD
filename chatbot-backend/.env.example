# Bwire Global Tech AI Chatbot Configuration
# Copy this file to .env and fill in your values

# API Keys (Choose one or more)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
HUGGINGFACE_API_KEY=hf_your-huggingface-key-here

# LLM Configuration
LLM_PROVIDER=openai  # Options: openai, anthropic, huggingface, local
LLM_MODEL=gpt-4-turbo-preview  # or gpt-3.5-turbo, claude-3-opus-20240229, etc.
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Vector Database
VECTOR_DB=chromadb  # Options: chromadb, faiss
VECTOR_DB_PATH=./data/vector_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/chatbot.db
# For PostgreSQL: postgresql://user:password@localhost/chatbot

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://www.triventatech.com,https://triventatech.com
CORS_ALLOW_CREDENTIALS=true

# Application Settings
APP_NAME=Bwire Global Tech AI Chatbot
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Chatbot Personality
CHATBOT_NAME=TriVenta AI
CHATBOT_PERSONALITY=friendly  # Options: friendly, professional, empathetic, technical
CHATBOT_LANGUAGE=en  # Primary language

# Rate Limiting
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_PERIOD=60  # seconds

# Safety & Moderation
ENABLE_CONTENT_FILTER=true
ENABLE_TOXICITY_CHECK=true
MAX_CONVERSATION_LENGTH=50  # messages

# Business Context (Knowledge Base)
COMPANY_NAME=Bwire Global Tech
COMPANY_EMAIL=bilfordderek917@gmail.com
COMPANY_PHONE=+254722206805
COMPANY_WEBSITE=https://www.triventatech.com
COMPANY_LOCATION=Nairobi, Kenya

# Services Offered
SERVICES=Web Development,AI & Data Science,Cybersecurity,Cloud Solutions,Mobile Apps,Training Programs
